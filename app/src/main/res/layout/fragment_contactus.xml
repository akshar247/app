<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:clickable="false"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/header_cover_image"
                android:layout_gravity="center_horizontal"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/logo"
                android:layout_marginTop="-20dp" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clickable="false"
        android:layout_gravity="center"
        android:layout_marginTop="-50dp">

        <LinearLayout
            android:paddingLeft="25dp"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App Version"
                android:textColor="#A9A9A9"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp"
                android:layout_marginLeft="175dp"
                android:text="12.121.000.1"
                android:textColor="#000000" />
        </LinearLayout>
        <View
            android:layout_width="390dp"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="#B8B894"
            android:text="Start Progress"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/text"/>
        <LinearLayout
            android:id="@+id/phone"
            android:paddingLeft="25dp"
            android:clickable="true"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textColor="#A9A9A9"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp"
                android:layout_marginLeft="190dp"
                android:id="@+id/phone1"
                android:text="+919054298628"
                android:textColor="#000000" />
        </LinearLayout>
        <View
            android:layout_width="390dp"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="#B8B894"
            android:text="Start Progress"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/phone1"/>
        <LinearLayout
            android:id="@+id/email"
            android:paddingLeft="25dp"
            android:clickable="true"
            android:onClick="editActions"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#A9A9A9"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp"
                android:layout_marginLeft="110dp"
                android:id="@+id/text1"
                android:text="aksharrdholakiyaa@gmail.com"
                android:textColor="#000000" />
        </LinearLayout>
        <View
            android:layout_width="390dp"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="#B8B894"
            android:text="Start Progress"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/text1"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:id="@+id/insta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/instagram"/>
            <TextView
                android:textStyle="bold"
                android:textColor="#A9A9A9"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Instagram"/>
        </LinearLayout>
        <View
            android:layout_width="390dp"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="#B8B894"
            android:text="Start Progress"
            android:layout_marginTop="8dp"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:id="@+id/facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/fb"/>
            <TextView
                android:textStyle="bold"
                android:textColor="#A9A9A9"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Facebook"/>
        </LinearLayout>
        <View
            android:layout_width="390dp"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="#B8B894"
            android:text="Start Progress"
            android:layout_marginTop="8dp"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:id="@+id/youtube"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/yt"/>
            <TextView
                android:textStyle="bold"
                android:textColor="#A9A9A9"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Youtube"/>
        </LinearLayout>
        <View
            android:layout_width="390dp"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="#B8B894"
            android:text="Start Progress"
            android:layout_marginTop="8dp"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/twitter"
            android:paddingLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/twi"/>
            <TextView
                android:textStyle="bold"
                android:textColor="#A9A9A9"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Twitter"/>

        </LinearLayout>
        <View
            android:layout_width="390dp"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="#B8B894"
            android:text="Start Progress"
            android:layout_marginTop="8dp"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/linked"
            android:paddingLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/in"/>
            <TextView
                android:textStyle="bold"
                android:textColor="#A9A9A9"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="LinkedIn"/>
        </LinearLayout>
        <View
            android:layout_width="390dp"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="#B8B894"
            android:text="Start Progress"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</LinearLayout>